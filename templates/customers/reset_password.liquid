{% comment %}
  This is the password reset page
{% endcomment %}

<div class="reset-password">
  <div class="reset-password__container">
    <h1 class="reset-password__title">{{ 'customers.reset_password.title' | t }}</h1>

    {% form 'reset_customer_password' %}
      {% if form.errors %}
        <div class="reset-password__errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="reset-password__field">
        <label for="password">{{ 'customers.reset_password.password' | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="reset-password__field">
        <label for="password_confirmation">{{ 'customers.reset_password.password_confirmation' | t }}</label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="reset-password__actions">
        <button type="submit" class="reset-password__submit">
          {{ 'customers.reset_password.submit' | t }}
        </button>
      </div>
    {% endform %}
  </div>
</div>

{% style %}
  .reset-password {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 4rem var(--page-margin);
  }

  .reset-password__container {
    max-width: 400px;
    margin: 0 auto;
  }

  .reset-password__title {
    font-size: 2rem;
    margin: 0 0 2rem;
    color: var(--color-foreground);
    text-align: center;
  }

  .reset-password__errors {
    background-color: #fff0f0;
    color: #d02e2e;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: var(--style-border-radius-inputs);
  }

  .reset-password__field {
    margin-bottom: 1.5rem;
  }

  .reset-password__field label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .reset-password__field input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .reset-password__field input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .reset-password__actions {
    margin-bottom: 2rem;
  }

  .reset-password__submit {
    width: 100%;
    background-color: var(--color-accent);
    color: var(--color-background);
    border: none;
    padding: 0.75rem;
    border-radius: var(--style-border-radius-inputs);
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }

  .reset-password__submit:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 749px) {
    .reset-password {
      padding: 3rem var(--page-margin);
    }

    .reset-password__title {
      font-size: 1.75rem;
    }
  }
{% endstyle %} 