{% comment %}
  This is the login page for customers
{% endcomment %}

<div class="login">
  <div class="login__container">
    <h1 class="login__title">{{ 'customers.login.title' | t }}</h1>

    {% form 'customer_login' %}
      {% if form.errors %}
        <div class="login__errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="login__field">
        <label for="customer_email">{{ 'customers.login.email' | t }}</label>
        <input
          type="email"
          name="customer[email]"
          id="customer_email"
          autocomplete="email"
          required
        >
      </div>

      <div class="login__field">
        <label for="customer_password">{{ 'customers.login.password' | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="customer_password"
          autocomplete="current-password"
          required
        >
      </div>

      <div class="login__actions">
        <button type="submit" class="login__submit">
          {{ 'customers.login.submit' | t }}
        </button>

        <a href="{{ routes.account_recover_url }}" class="login__forgot">
          {{ 'customers.login.forgot_password' | t }}
        </a>
      </div>
    {% endform %}

    <div class="login__register">
      <h2>{{ 'customers.login.new_customer' | t }}</h2>
      <a href="{{ routes.account_register_url }}" class="login__register-link">
        {{ 'customers.login.create_account' | t }}
      </a>
    </div>
  </div>
</div>

{% style %}
  .login {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 4rem var(--page-margin);
  }

  .login__container {
    max-width: 400px;
    margin: 0 auto;
  }

  .login__title {
    font-size: 2rem;
    margin: 0 0 2rem;
    color: var(--color-foreground);
    text-align: center;
  }

  .login__errors {
    background-color: #fff0f0;
    color: #d02e2e;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: var(--style-border-radius-inputs);
  }

  .login__field {
    margin-bottom: 1.5rem;
  }

  .login__field label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .login__field input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .login__field input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .login__actions {
    margin-bottom: 2rem;
  }

  .login__submit {
    width: 100%;
    background-color: var(--color-accent);
    color: var(--color-background);
    border: none;
    padding: 0.75rem;
    border-radius: var(--style-border-radius-inputs);
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }

  .login__submit:hover {
    opacity: 0.9;
  }

  .login__forgot {
    display: block;
    text-align: center;
    margin-top: 1rem;
    color: var(--color-foreground-subdued);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .login__forgot:hover {
    color: var(--color-accent);
  }

  .login__register {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .login__register h2 {
    font-size: 1.2rem;
    margin: 0 0 1rem;
    color: var(--color-foreground);
  }

  .login__register-link {
    display: inline-block;
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .login__register-link:hover {
    color: var(--color-foreground);
  }

  @media screen and (max-width: 749px) {
    .login {
      padding: 3rem var(--page-margin);
    }

    .login__title {
      font-size: 1.75rem;
    }
  }
{% endstyle %} 