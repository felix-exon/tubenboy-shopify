{% comment %}
  This is the registration page for new customers
{% endcomment %}

<div class="register">
  <div class="register__container">
    <h1 class="register__title">{{ 'customers.register.title' | t }}</h1>

    {% form 'customer_register' %}
      {% if form.errors %}
        <div class="register__errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="register__field">
        <label for="first_name">{{ 'customers.register.first_name' | t }}</label>
        <input
          type="text"
          name="customer[first_name]"
          id="first_name"
          autocomplete="given-name"
          required
        >
      </div>

      <div class="register__field">
        <label for="last_name">{{ 'customers.register.last_name' | t }}</label>
        <input
          type="text"
          name="customer[last_name]"
          id="last_name"
          autocomplete="family-name"
          required
        >
      </div>

      <div class="register__field">
        <label for="email">{{ 'customers.register.email' | t }}</label>
        <input
          type="email"
          name="customer[email]"
          id="email"
          autocomplete="email"
          required
        >
      </div>

      <div class="register__field">
        <label for="password">{{ 'customers.register.password' | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="register__actions">
        <button type="submit" class="register__submit">
          {{ 'customers.register.submit' | t }}
        </button>
      </div>
    {% endform %}

    <div class="register__login">
      <h2>{{ 'customers.register.existing_customer' | t }}</h2>
      <a href="{{ routes.account_login_url }}" class="register__login-link">
        {{ 'customers.register.login' | t }}
      </a>
    </div>
  </div>
</div>

{% style %}
  .register {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 4rem var(--page-margin);
  }

  .register__container {
    max-width: 400px;
    margin: 0 auto;
  }

  .register__title {
    font-size: 2rem;
    margin: 0 0 2rem;
    color: var(--color-foreground);
    text-align: center;
  }

  .register__errors {
    background-color: #fff0f0;
    color: #d02e2e;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: var(--style-border-radius-inputs);
  }

  .register__field {
    margin-bottom: 1.5rem;
  }

  .register__field label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .register__field input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .register__field input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .register__actions {
    margin-bottom: 2rem;
  }

  .register__submit {
    width: 100%;
    background-color: var(--color-accent);
    color: var(--color-background);
    border: none;
    padding: 0.75rem;
    border-radius: var(--style-border-radius-inputs);
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }

  .register__submit:hover {
    opacity: 0.9;
  }

  .register__login {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .register__login h2 {
    font-size: 1.2rem;
    margin: 0 0 1rem;
    color: var(--color-foreground);
  }

  .register__login-link {
    display: inline-block;
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .register__login-link:hover {
    color: var(--color-foreground);
  }

  @media screen and (max-width: 749px) {
    .register {
      padding: 3rem var(--page-margin);
    }

    .register__title {
      font-size: 1.75rem;
    }
  }
{% endstyle %} 