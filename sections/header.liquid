<header class="header">
  <div class="header__logo">
    {% if section.settings.logo != blank %}
      {{ section.settings.logo | image_url: width: 200 | image_tag:
        loading: 'lazy',
        width: 200,
        height: 'auto',
        alt: shop.name
      }}
    {% else %}
      <h2 class="header__title">
        {{ shop.name | link_to: routes.root_url }}
      </h2>
    {% endif %}
  </div>

  <nav class="header__menu">
    {% for link in section.settings.menu.links %}
      <a href="{{ link.url }}" class="header__menu-item{% if link.active %} header__menu-item--active{% endif %}">
        {{ link.title }}
      </a>
    {% endfor %}
  </nav>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="header__icon-link">
        {{ 'icon-account.svg' | inline_asset_content }}
      </a>
    {% endif %}

    <a href="{{ routes.cart_url }}" class="header__icon-link">
      {% if cart.item_count > 0 %}
        <span class="header__cart-count">{{ cart.item_count }}</span>
      {% endif %}
      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  .header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .header__logo {
    flex: 0 0 auto;
  }

  .header__logo img {
    max-height: 3rem;
    width: auto;
  }

  .header__title {
    margin: 0;
    font-size: 1.5rem;
  }

  .header__menu {
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .header__menu-item {
    text-decoration: none;
    color: var(--color-foreground);
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
  }

  .header__menu-item:hover {
    color: var(--color-accent);
  }

  .header__menu-item--active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-accent);
  }

  .header__icons {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .header__icon-link {
    position: relative;
    color: var(--color-foreground);
    transition: color 0.2s ease;
  }

  .header__icon-link:hover {
    color: var(--color-accent);
  }

  .header__icon-link svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .header__cart-count {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    background-color: var(--color-accent);
    color: var(--color-background);
    font-size: 0.75rem;
    font-weight: 600;
    min-width: 1.25rem;
    height: 1.25rem;
    border-radius: 0.625rem;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 0.25rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
