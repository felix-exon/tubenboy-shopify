{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Margin (Top,Bottom)",
      "default": "0,0",
      "info": "Top(px),Bottom(px)"
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image",
      "info": "Recommended size: 768x900"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "checkbox",
      "id": "use_auto_scaling",
      "label": "Use Automatic Mobile Scaling",
      "default": true,
      "info": "When enabled, mobile font sizes will automatically scale based on desktop sizes"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Desktop)",
      "default": 54
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Mobile)",
      "default": 32,
      "info": "Only used when automatic scaling is disabled"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Heading Bottom Padding",
      "default": 24
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Amazing Products"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Subheading Size (Desktop)",
      "default": 20
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading Size (Mobile)",
      "default": 18,
      "info": "Only used when automatic scaling is disabled"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subheading_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Subheading Bottom Padding",
      "default": 32
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Shop our latest collection of premium products.</p>"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Description Size (Desktop)",
      "default": 16
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "description_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description Size (Mobile)",
      "default": 14,
      "info": "Only used when automatic scaling is disabled"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        {"value": "top-left", "label": "Top Left"},
        {"value": "top-center", "label": "Top Center"},
        {"value": "top-right", "label": "Top Right"},
        {"value": "center-left", "label": "Center Left"},
        {"value": "center", "label": "Center"},
        {"value": "center-right", "label": "Center Right"},
        {"value": "bottom-left", "label": "Bottom Left"},
        {"value": "bottom-center", "label": "Bottom Center"},
        {"value": "bottom-right", "label": "Bottom Right"}
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Button Top Margin",
      "default": 16
    },
    {
      "type": "range",
      "id": "button_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Button Bottom Margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Height"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 400,
      "max": 1200,
      "step": 10,
      "unit": "px",
      "label": "Desktop Height",
      "default": 700
    },
    {
      "type": "range",
      "id": "tablet_height",
      "min": 400,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Tablet Height",
      "default": 600
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Height",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% assign margin = section.settings.margin | split: ',' %}
{% assign top = margin[0] %}
{% assign bottom = margin[1] %}

<div class="hero-section" style="margin-top: {{ top }}px; margin-bottom: {{ bottom }}px;">
  {% if section.settings.background_image %}
    <div class="hero-image">
      {% if section.settings.mobile_background_image %}
        {{ section.settings.mobile_background_image | image_url: width: 768 | image_tag:
          loading: 'eager',
          class: 'mobile-only w-full h-full object-cover'
        }}
      {% endif %}
      {{ section.settings.background_image | image_url: width: 2000 | image_tag:
        loading: 'eager',
        class: 'desktop-only w-full h-full object-cover'
      }}
    </div>
  {% endif %}
  
  <div class="hero-overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  
  <div class="hero-text {{ section.settings.content_position }}">
    <div class="hero-content {% if section.settings.text_alignment == 'center' %}text-center{% elsif section.settings.text_alignment == 'right' %}text-right{% else %}text-left{% endif %}">
      {% if section.settings.heading != blank %}
        <h1 class="hero-heading" style="color: {{ section.settings.heading_color }}; font-size: {{ section.settings.heading_size }}px; padding-bottom: {{ section.settings.heading_padding_bottom }}px;">
          {{ section.settings.heading }}
        </h1>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <h2 class="hero-subheading" style="color: {{ section.settings.subheading_color }}; font-size: {{ section.settings.subheading_size }}px; padding-bottom: {{ section.settings.subheading_padding_bottom }}px;">
          {{ section.settings.subheading }}
        </h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="hero-description" style="color: {{ section.settings.description_color }}; font-size: {{ section.settings.description_size }}px; padding-bottom: {{ section.settings.description_padding_bottom }}px;">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}; margin-top: {{ section.settings.button_margin_top }}px; margin-bottom: {{ section.settings.button_margin_bottom }}px;">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: {{ section.settings.desktop_height }}px;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .hero-text {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    display: flex;
    padding: 2rem;
  }

  .hero-content {
    max-width: 800px;
    width: 100%;
  }

  .hero-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    text-align: center;
    transition: opacity 0.3s ease;
  }

  .hero-button:hover {
    opacity: 0.9;
  }

  /* Content Position Classes */
  .top-left { align-items: flex-start; justify-content: flex-start; }
  .top-center { align-items: flex-start; justify-content: center; }
  .top-right { align-items: flex-start; justify-content: flex-end; }
  .center-left { align-items: center; justify-content: flex-start; }
  .center { align-items: center; justify-content: center; }
  .center-right { align-items: center; justify-content: flex-end; }
  .bottom-left { align-items: flex-end; justify-content: flex-start; }
  .bottom-center { align-items: flex-end; justify-content: center; }
  .bottom-right { align-items: flex-end; justify-content: flex-end; }

  /* Responsive Styles */
  @media screen and (max-width: 1199px) {
    .hero-section {
      height: {{ section.settings.tablet_height }}px;
    }
  }

  @media screen and (max-width: 767px) {
    .hero-section {
      height: {{ section.settings.mobile_height }}px;
    }
    
    .desktop-only {
      display: none;
    }
    
    .mobile-only {
      display: block;
    }
    
    .hero-content {
      padding: 1rem;
    }
  }

  @media screen and (min-width: 768px) {
    .mobile-only {
      display: none;
    }
    
    .desktop-only {
      display: block;
    }
  }

  /* Responsive Font Sizes */
  @media screen and (max-width: 767px) {
    {% if section.settings.use_auto_scaling %}
      .hero-heading {
        font-size: calc({{ section.settings.heading_size }}px * 0.6) !important;
      }
      .hero-subheading {
        font-size: calc({{ section.settings.subheading_size }}px * 0.8) !important;
      }
      .hero-description {
        font-size: calc({{ section.settings.description_size }}px * 0.9) !important;
      }
    {% else %}
      .hero-heading {
        font-size: {{ section.settings.heading_size_mobile }}px !important;
      }
      .hero-subheading {
        font-size: {{ section.settings.subheading_size_mobile }}px !important;
      }
      .hero-description {
        font-size: {{ section.settings.description_size_mobile }}px !important;
      }
    {% endif %}
  }

  @media screen and (max-width: 480px) {
    {% if section.settings.use_auto_scaling %}
      .hero-heading {
        font-size: calc({{ section.settings.heading_size }}px * 0.5) !important;
      }
      .hero-subheading {
        font-size: calc({{ section.settings.subheading_size }}px * 0.7) !important;
      }
      .hero-description {
        font-size: calc({{ section.settings.description_size }}px * 0.8) !important;
      }
    {% endif %}
  }
</style> 