{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="page">
  <div class="page__header">
    <h1 class="page__title">{{ page.title }}</h1>
  </div>

  <div class="page__content rte">
    {{ page.content }}
  </div>
</div>

{% stylesheet %}
  .page {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 4rem var(--page-margin);
  }

  .page__header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .page__header::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background-color: var(--color-accent);
    margin: 1.5rem auto 0;
    border-radius: 2px;
  }

  .page__title {
    font-size: 2.5rem;
    font-weight: var(--font-primary--weight);
    margin: 0;
    color: var(--color-foreground);
  }

  .page__content {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }

  .page__content h2 {
    font-size: 1.8rem;
    margin: 2.5rem 0 1.5rem;
    color: var(--color-foreground);
  }

  .page__content h3 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: var(--color-foreground);
  }

  .page__content p {
    margin: 1.5rem 0;
  }

  .page__content a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .page__content a:hover {
    color: var(--color-foreground);
  }

  .page__content ul,
  .page__content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .page__content li {
    margin: 0.5rem 0;
  }

  .page__content blockquote {
    border-left: 4px solid var(--color-accent);
    margin: 2rem 0;
    padding: 1rem 0 1rem 2rem;
    font-style: italic;
    color: var(--color-foreground-subdued);
  }

  .page__content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--style-border-radius-inputs);
    margin: 2rem 0;
  }

  @media screen and (max-width: 749px) {
    .page {
      padding: 3rem var(--page-margin);
    }

    .page__title {
      font-size: 2rem;
    }

    .page__content {
      font-size: 1rem;
    }

    .page__content h2 {
      font-size: 1.6rem;
    }

    .page__content h3 {
      font-size: 1.3rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.page",
  "settings": []
}
{% endschema %}
