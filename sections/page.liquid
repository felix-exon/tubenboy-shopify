{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="page page--{{ section.id }}" style="margin-top: {{ section.settings.padding_top }}px; margin-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.show_header %}
    <div class="page__header" style="{% if section.settings.custom_header_bg %}background-color: {{ section.settings.header_bg_color }};{% endif %} {% if section.settings.header_padding %}padding: {{ section.settings.header_padding }}px;{% endif %}">
      <div class="section-header">
        <h1 class="section-header__heading" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px;">{{ page.title }}</h1>
        <div class="section-header__underline"></div>
        <div class="section-header__accent"></div>
      </div>
      {% if page.excerpt != blank and section.settings.show_excerpt %}
        <div class="page__excerpt" style="color: {{ section.settings.excerpt_color }}; font-size: {{ section.settings.excerpt_size }}px;">
          {{ page.excerpt }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="page__content rte" style="font-size: {{ section.settings.content_size }}px; line-height: {{ section.settings.content_line_height }}; color: {{ section.settings.content_color }};">
    {{ page.content }}
  </div>
</div>

{% stylesheet %}
  .page {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 var(--page-margin);
    {% if section.settings.custom_bg %}
      background-color: {{ section.settings.bg_color }};
    {% endif %}
    {% if section.settings.border_radius > 0 %}
      border-radius: {{ section.settings.border_radius }}px;
    {% endif %}
    {% if section.settings.shadow_enabled %}
      box-shadow: 0 {{ section.settings.shadow_blur }}px {{ section.settings.shadow_spread }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .page__header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_bottom_margin }}px;
    position: relative;
    {% if section.settings.custom_header_bg %}
      border-radius: {{ section.settings.header_border_radius }}px;
    {% endif %}
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 0 var(--page-margin);
  }

  .section-header__heading {
    font-weight: 700;
    margin: 0;
    position: relative;
    display: inline-block;
    max-width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    {% if section.settings.title_letter_spacing != 0 %}
      letter-spacing: {{ section.settings.title_letter_spacing }}px;
    {% endif %}
    {% if section.settings.title_text_transform != 'none' %}
      text-transform: {{ section.settings.title_text_transform }};
    {% endif %}
  }

  .section-header__underline {
    width: 100%;
    height: 1px;
    background-color: var(--color-border);
    margin: 1rem auto;
  }

  .section-header__accent {
    width: 60px;
    height: 3px;
    background-color: var(--color-accent);
    margin: 0 auto;
  }

  .page__excerpt {
    margin-top: {{ section.settings.excerpt_margin_top }}px;
    margin-bottom: {{ section.settings.excerpt_margin_bottom }}px;
    font-style: {{ section.settings.excerpt_style }};
    {% if section.settings.excerpt_letter_spacing != 0 %}
      letter-spacing: {{ section.settings.excerpt_letter_spacing }}px;
    {% endif %}
  }

  .page__content {
    {% if section.settings.content_max_width > 0 %}
      max-width: {{ section.settings.content_max_width }}px;
      margin-left: auto;
      margin-right: auto;
    {% endif %}
    line-height: 1.6;
    letter-spacing: 0.01em;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    padding: 0 var(--page-margin);
  }

  .page__content h2 {
    font-size: {{ section.settings.h2_size }}px;
    margin: 2.5em 0 1em;
    color: {{ section.settings.h2_color }};
    font-weight: 600;
    line-height: 1.3;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
  }

  .page__content h3 {
    font-size: {{ section.settings.h3_size }}px;
    margin: 2em 0 0.8em;
    color: {{ section.settings.h3_color }};
    font-weight: 600;
    line-height: 1.3;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
  }

  .page__content p {
    margin: 1.5em 0;
    max-width: 65ch;
  }

  .page__content a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
    border-bottom: 1px solid currentColor;
  }

  .page__content a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .page__content ul,
  .page__content ol {
    margin: 1.5em 0;
    padding-left: 2em;
    max-width: 65ch;
  }

  .page__content li {
    margin: 0.5em 0;
  }

  .page__content blockquote {
    border-left: {{ section.settings.blockquote_border_width }}px solid {{ section.settings.blockquote_border_color }};
    margin: 2em 0;
    padding: 1em 0 1em 1.5em;
    font-style: {{ section.settings.blockquote_style }};
    color: {{ section.settings.blockquote_color }};
    {% if section.settings.blockquote_bg_enabled %}
      background-color: {{ section.settings.blockquote_bg_color }};
      border-radius: {{ section.settings.blockquote_border_radius }}px;
    {% endif %}
    max-width: 65ch;
  }

  .page__content img {
    max-width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
    margin: 2em 0;
  }

  @media screen and (max-width: 768px) {
    .page {
      padding: 0;
    }

    .page__title {
      font-size: {{ section.settings.mobile_title_size }}px !important;
    }

    .page__content {
      font-size: {{ section.settings.mobile_content_size }}px !important;
      padding: 0 var(--page-margin);
    }

    .page__excerpt {
      font-size: {{ section.settings.mobile_excerpt_size }}px !important;
    }

    .page__content h2 {
      font-size: {{ section.settings.mobile_h2_size }}px !important;
      margin: 2em 0 0.8em;
    }

    .page__content h3 {
      font-size: {{ section.settings.mobile_h3_size }}px !important;
      margin: 1.5em 0 0.6em;
    }

    .page__content p,
    .page__content ul,
    .page__content ol,
    .page__content blockquote {
      max-width: 100%;
      padding: 0;
    }

    .section-header {
      padding: 0 var(--page-margin);
    }

    .section-header__heading {
      font-size: {{ section.settings.mobile_title_size }}px !important;
      display: block;
      text-align: center;
    }

    .section-header__underline,
    .section-header__accent {
      margin-left: auto;
      margin-right: auto;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Max Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 0,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 800
    },
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show Header",
      "default": true
    },
    {
      "type": "range",
      "id": "header_bottom_margin",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Header Bottom Margin",
      "default": 40
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_title_size",
      "min": 20,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Mobile Title Font Size",
      "default": 32
    },
    {
      "type": "range",
      "id": "content_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Content Font Size",
      "default": 16
    },
    {
      "type": "range",
      "id": "mobile_content_size",
      "min": 14,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Mobile Content Font Size",
      "default": 16
    },
    {
      "type": "range",
      "id": "content_line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Content Line Height",
      "default": 1.6
    }
  ]
}
{% endschema %}
